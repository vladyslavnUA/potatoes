<div class="card">
  <div class="card-block">
    <h4 class="card-title">{{this.title}}</h4>
    <p class="card-text">{{this.content}}</p>
    <small class="card-text text-muted">Posted: {{this.createdAt}}</small>

    <p>
        <form action="/reviews/comments/{{this._id}}?_method=DELETE" method="post">
            <button type="submit">Delete</button>
        </form>
    </p>

  </div>
</div>