<div class="row">
    <h1>{{review.title}}</h1>
    <h2>{{review.movieTitle}}</h2>
    <p>{{review.description}}</p>

    <p><a href="/reviews/{{review._id}}/edit">Edit</a></p>

    <p>
        <form action="/reviews/{{review._id}}?_method=DELETE" method="post">
            <button type="submit">Delete</button>
        </form>
    </p>
</div>

