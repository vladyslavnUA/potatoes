<h1>All Reviews</h1>

{{> navbar}}

<div class="container" id="hello">
    {{#each reviews}}
        <a href="/reviews/{{this._id}}" style="text-decoration: none;">
        <div><small>By: {{this.author.username}}</small></div>
        <h2 style="color: rgb(25, 185, 185);">{{this.title}}</a> | 
        <i style="color: rgb(43, 179, 31);">{{this.movieTitle}}</i></h2>
        <small>{{this.description}}</small>
        <br>
    {{/each}}
</div>